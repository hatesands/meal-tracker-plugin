openapi: 3.0.1
info:
  title: Meal Tracker API
  version: "1.0.0"
servers:
  - url: https://script.google.com/macros/s/AKfycbzR2-u0FjMcJT2PzfhEZpWS6q-HtbHUc9WGq_jPqdn27DawXQclZg7oi6pVNOk9zNg5/exec
paths:
  /:
    post:
      summary: Duplicate a month or log meals
      description: |
        * action = "duplicateMonth"  
        * action = "logMeals"
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PluginRequest'
      responses:
        '200':
          description: Success or error JSON
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PluginResponse'

components:
  schemas:
    PluginRequest:
      type: object
      required:
        - apiKey
        - action
      properties:
        apiKey:
          type: string
          description: Your secret API key
        action:
          type: string
          enum: [duplicateMonth, logMeals]
        monthInput:
          type: string
          description: Full month name and year, e.g. "July 2025"
        mealSheetName:
          type: string
          description: "<Month YYYY> - Meals"
        meals:
          type: array
          items:
            $ref: '#/components/schemas/MealLog'
    MealLog:
      type: object
      required:
        - row
      properties:
        row:
          type: integer
          description: Row number on the Meals sheet (4â€“31)
        breakfastText:
          type: string
        lunchText:
          type: string
        dinnerText:
          type: string
        snacksText:
          type: string
        workoutShakesText:
          type: string
    PluginResponse:
      type: object
      required:
        - status
      properties:
        status:
          type: string
          enum: [success, error]
        action:
          type: string
        message:
          type: string
